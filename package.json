{
  "private": true,
  "name": "westegg",
  "scripts": {
    "build": "bash -c \"cd @westegg && yarn build\" && bash -c \"cd docs && yarn build\" && bash -c \"cd starters && yarn build\"",
    "publish-ci": "lerna publish -y --canary --preid ci --npm-tag=ci",
    "publish": "lerna publish"
  },
  "workspaces": [
    "@westegg/*",
    "docs",
    "starters/*"
  ],
  "dependencies": {
    "husky": "1.3.1",
    "lerna": "3.15.0",
    "lint-staged": "8.2.1"
  },
  "devDependencies": {
    "@misk/prettier": "0.1.15"
  },
  "prettier": "@misk/prettier",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,mdx,css,sass,less,json,js,jsx,ts,tsx}": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  }
}
